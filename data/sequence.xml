<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence for Listing Records -->
        <record id="sequence_listing_records" model="ir.sequence">
            <field name="name">Listing Sequence</field>
            <field name="code">listing.records</field>
            <field name="prefix">L-%(year)s-</field>
            <field name="padding">4</field>
            <field name="number_next_actual" eval="1"/>
            <field name="number_increment" eval="1"/>
            <field name="implementation">no_gap</field>
            <field name="use_date_range">True</field>
            <!-- Set to the specific company -->
            <!-- <field name="company_id" ref="base.main_company"/> -->
        </record>

        <!-- Sequence for Deal Records -->
        <record id="sequence_deal_records" model="ir.sequence">
            <field name="name">Deal Sequence</field>
            <field name="code">deal.records</field>
            <field name="prefix">D-%(year)s-</field>
            <field name="padding">4</field>
            <field name="number_next_actual" eval="1"/>
            <field name="number_increment" eval="1"/>
            <field name="implementation">no_gap</field>
            <field name="use_date_range">True</field>
            <!-- Set to the specific company -->
            <!--  <field name="company_id" ref="base.main_company"/> -->
        </record>
    </data>

    <!-- Cheque Payment Sequence -->
    <record id="seq_payment_cheque" model="ir.sequence">
        <field name="name">Cheque Payment Sequence</field>
        <field name="code">payment.cheque</field>
        <field name="prefix">CHQ</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- EFT Payment Sequence -->
    <record id="seq_payment_eft" model="ir.sequence">
        <field name="name">EFT Payment Sequence</field>
        <field name="code">payment.eft</field>
        <field name="prefix">EFT</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Split Payment Sequence -->
    <record id="seq_payment_split" model="ir.sequence">
        <field name="name">Split Payment Sequence</field>
        <field name="code">payment.split</field>
        <field name="prefix">SPL</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>
    <!-- Commission Advance Payment Sequence -->
    <record id="seq_commission_advance_payment" model="ir.sequence">
        <field name="name">Commission Advance Payment</field>
        <field name="code">payment.advance</field>
        <field name="prefix">ADV</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Commission Repayment Payment Sequence -->
    <record id="seq_commission_repayment_payment" model="ir.sequence">
        <field name="name">Commission Repayment Payment</field>
        <field name="code">payment.repayment</field>
        <field name="prefix">REP</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>
</odoo>
