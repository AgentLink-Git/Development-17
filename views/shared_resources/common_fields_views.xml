<odoo>
    <!-- Business Source Views -->
    <record id="view_business_source_tree" model="ir.ui.view">
        <field name="name">business.source.tree</field>
        <field name="model">business.source</field>
        <field name="arch" type="xml">
            <tree string="Business Sources">
                <field name="name"/>
                <field name="business_source_type"/>
                <field name="sequence"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <record id="view_business_source_form" model="ir.ui.view">
        <field name="name">business.source.form</field>
        <field name="model">business.source</field>
        <field name="arch" type="xml">
            <form string="Business Source">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="business_source_type"/>
                        <field name="sequence"/>
                        <field name="is_active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_business_source_search" model="ir.ui.view">
        <field name="name">business.source.search</field>
        <field name="model">business.source</field>
        <field name="arch" type="xml">
            <search string="Business Sources">
                <field name="name"/>
                <field name="business_source_type"/>
                <filter string="Active" domain="[('is_active', '=', True)]"/>
            </search>
        </field>
    </record>

